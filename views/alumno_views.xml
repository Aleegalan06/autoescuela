<odoo>
  <data>
    <record id="view_autoescuela_alumno_tree" model="ir.ui.view">
      <field name="name">autoescuela.alumno.tree</field>
      <field name="model">autoescuela.alumno</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="dni"/>
          <field name="matricula"/>
          <field name="autoescuela_id"/>
          <field name="profesor_id"/>
        </tree>
      </field>
    </record>
    <record id="view_autoescuela_alumno_form" model="ir.ui.view">
      <field name="name">autoescuela.alumno.form</field>
      <field name="model">autoescuela.alumno</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="dni"/>
              <field name="autoescuela_id"/>
              <field name="profesor_id"/>
              <field name="domicilio"/>
              <field name="matricula"/>
            </group>
            <notebook>
              <page string="ExÃ¡menes">
                <field name="examen_ids" widget="many2many_tags"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record id="action_autoescuela_alumno" model="ir.actions.act_window">
      <field name="name">Alumnos</field>
      <field name="res_model">autoescuela.alumno</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>
