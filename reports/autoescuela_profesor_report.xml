<odoo>
  <data>
    <report
        id="report_autoescuela_profesor_html"
        model="autoescuela.profesor"
        string="Ficha de Profesor (HTML)"
        report_type="qweb-html"
        name="autoescuela.report_autoescuela_profesor"
        file="autoescuela.report_autoescuela_profesor"
    />
    <report
        id="report_autoescuela_profesor_pdf"
        model="autoescuela.profesor"
        string="Ficha de Profesor"
        report_type="qweb-pdf"
        name="autoescuela.report_autoescuela_profesor"
        file="autoescuela.report_autoescuela_profesor"
    />
    <template id="report_autoescuela_profesor">
      <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
          <div class="page">
            <h2>Información del profesor</h2>
            <table class="table table-sm">
              <tbody>
                <tr>
                  <th>Nombre:</th>
                  <td><span t-field="o.name"/></td>
                </tr>
                <tr>
                  <th>DNI:</th>
                  <td><span t-field="o.dni"/></td>
                </tr>
                <tr>
                  <th>Coche:</th>
                  <td><span t-field="o.coche"/></td>
                </tr>
                <tr>
                  <th>Matrícula coche:</th>
                  <td><span t-field="o.matricula"/></td>
                </tr>
                <tr>
                  <th>Autoescuela:</th>
                  <td><span t-field="o.autoescuela_id"/></td>
                </tr>
                <tr>
                  <th>Fecha incorporación:</th>
                  <td><span t-field="o.incorporacion"/></td>
                </tr>
                <tr>
                  <th>Años de antigüedad:</th>
                  <td><span t-field="o.antiguedad"/></td>
                </tr>
              </tbody>
            </table>
            <h3>Alumnos asignados</h3>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>DNI</th>
                  <th>N.º Matrícula</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.alumno_ids" t-as="alu">
                  <td><span t-field="alu.name"/></td>
                  <td><span t-field="alu.dni"/></td>
                  <td><span t-field="alu.matricula"/></td>
                </tr>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>

