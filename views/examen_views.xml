<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE -->
    <record id="view_examen_tree" model="ir.ui.view">
        <field name="name">autoescuela.examen.tree</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="codigo"/>
                <field name="alumno_id"/>
                <field name="fecha"/>
            </tree>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_examen_form" model="ir.ui.view">
        <field name="name">autoescuela.examen.form</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="alumno_id"/>
                        <field name="fecha"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Este filtro se implementa mediante una search view para el modelo autoescuela.examen
        Sirve para que al abrir la lista o el calendario, se muestren solo los exámenes de alumnos
        cuyo carnet está activado-->
    <record id="view_examen_search" model="ir.ui.view">
        <field name="name">autoescuela.examen.search</field>
        <field name="model">autoescuela.examen</field>
        <field name="arch" type="xml">
            <search>
                <field name="alumno_id"/>
                <filter name="carnet_activado" string="Carnet activado"
                        domain="[('alumno_id.carnet','=',True)]"
                        default="1"/>
            </search>
        </field>
    </record>


</odoo>
