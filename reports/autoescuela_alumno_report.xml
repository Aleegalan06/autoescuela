<odoo>
  <data>
    <report
        id="report_autoescuela_alumno_html"
        model="autoescuela.alumno"
        string="Ficha de Alumno (HTML)"
        report_type="qweb-html"
        name="autoescuela.report_autoescuela_alumno"
        file="autoescuela.report_autoescuela_alumno"
    />
    <report
        id="report_autoescuela_alumno_pdf"
        model="autoescuela.alumno"
        string="Ficha de Alumno"
        report_type="qweb-pdf"
        name="autoescuela.report_autoescuela_alumno"
        file="autoescuela.report_autoescuela_alumno"
    />
    <template id="report_autoescuela_alumno">
      <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
          <div class="page">
            <h2>Información del alumno</h2>
            <table class="table table-sm">
              <tbody>
                <tr>
                  <th>Nombre:</th>
                  <td><span t-field="o.name"/></td>
                </tr>
                <tr>
                  <th>DNI:</th>
                  <td><span t-field="o.dni"/></td>
                </tr>
                <tr>
                  <th>Domicilio:</th>
                  <td><span t-field="o.domicilio"/></td>
                </tr>
                <tr>
                  <th>N.º Matrícula:</th>
                  <td><span t-field="o.matricula"/></td>
                </tr>
                <tr>
                  <th>Autoescuela:</th>
                  <td><span t-field="o.autoescuela_id"/></td>
                </tr>
                <tr>
                  <th>Profesor:</th>
                  <td><span t-field="o.profesor_id"/></td>
                </tr>
              </tbody>
            </table>
            <h3>Exámenes</h3>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Código examen</th>
                  <th>Fecha</th>
                  <th>Tipo carnet</th>
                  <th>Precio</th>
                  <th>Aprobado</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.examen_ids" t-as="ex">
                  <td><span t-field="ex.name"/></td>
                  <td><span t-field="ex.fecha"/></td>
                  <td><span t-field="ex.carnet"/></td>
                  <td><span t-field="ex.precio"/></td>
                  <td>
                    <span t-esc="ex.aprobado and 'Sí' or 'No'"/>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
