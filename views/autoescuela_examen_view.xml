<odoo>
  <data>
    <record id="view_autoescuela_examen_search" model="ir.ui.view">
      <field name="name">autoescuela.examen.search</field>
      <field name="model">autoescuela.examen</field>
      <field name="arch" type="xml">
        <search>
          <filter string="Tiene Carnet" name="carnet_filter"
                  domain="[('carnet','!=','')]"
                  context="{'search_default_carnet_filter': 1}"/>
        </search>
      </field>
    </record>
    <record id="view_autoescuela_examen_tree" model="ir.ui.view">
      <field name="name">autoescuela.examen.tree</field>
      <field name="model">autoescuela.examen</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="alumno_id"/>
          <field name="fecha"/>
          <field name="carnet"/>
          <field name="precio"/>
          <field name="aprobado"/>
        </tree>
      </field>
    </record>
    <record id="view_autoescuela_examen_form" model="ir.ui.view">
      <field name="name">autoescuela.examen.form</field>
      <field name="model">autoescuela.examen</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" readonly="1"/>
              <field name="fecha"/>
              <field name="alumno_id"/>
              <field name="autoescuela_ids"/>
              <field name="moneda_id"/>
              <field name="precio"/>
              <field name="clases"/>
              <field name="carnet"/>
              <field name="aprobado"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="view_autoescuela_examen_calendar" model="ir.ui.view">
      <field name="name">autoescuela.examen.calendar</field>
      <field name="model">autoescuela.examen</field>
      <field name="arch" type="xml">
        <calendar date_start="fecha" string="Exámenes">
          <field name="name"/>
          <field name="carnet"/>
        </calendar>
      </field>
    </record>
    <record id="action_autoescuela_examen" model="ir.actions.act_window">
      <field name="name">Exámenes</field>
      <field name="res_model">autoescuela.examen</field>
      <field name="view_mode">tree,form,calendar</field>
      <field name="search_view_id" ref="view_autoescuela_examen_search"/>
    </record>
  </data>
</odoo>
