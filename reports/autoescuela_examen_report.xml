<odoo>
  <data>
    <report
        id="report_autoescuela_examen_html"
        model="autoescuela.examen"
        string="Ficha de Examen (HTML)"
        report_type="qweb-html"
        name="autoescuela.report_autoescuela_examen"
        file="autoescuela.report_autoescuela_examen"
    />
    <report
        id="report_autoescuela_examen_pdf"
        model="autoescuela.examen"
        string="Ficha de Examen"
        report_type="qweb-pdf"
        name="autoescuela.report_autoescuela_examen"
        file="autoescuela.report_autoescuela_examen"
    />
    <template id="report_autoescuela_examen">
      <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
          <div class="page">
            <h2>Información del examen</h2>
            <table class="table table-sm">
              <tbody>
                <tr>
                  <th>Código del examen:</th>
                  <td><span t-field="o.name"/></td>
                </tr>
                <tr>
                  <th>Fecha:</th>
                  <td><span t-field="o.fecha"/></td>
                </tr>
                <tr>
                  <th>Alumno:</th>
                  <td><span t-field="o.alumno_id"/></td>
                </tr>
                <tr>
                  <th>Autoescuelas asociadas:</th>
                  <td>
                    <span t-foreach="o.autoescuela_ids" t-as="a" t-separator=", ">
                      <span t-field="a.name"/>
                    </span>
                  </td>
                </tr>
                <tr>
                  <th>Tipo de carnet:</th>
                  <td><span t-field="o.carnet"/></td>
                </tr>
                <tr>
                  <th>Número de clases:</th>
                  <td><span t-field="o.clases"/></td>
                </tr>
                <tr>
                  <th>Precio:</th>
                  <td><span t-field="o.precio"/></td>
                </tr>
                <tr>
                  <th>Aprobado:</th>
                  <td>
                    <span t-esc="o.aprobado and 'Sí' or 'No'"/>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
