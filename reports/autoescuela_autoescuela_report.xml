<odoo>
  <data>
    <report
        id="report_autoescuela_autoescuela_html"
        model="autoescuela.autoescuela"
        string="Ficha de Autoescuela (HTML)"
        report_type="qweb-html"
        name="autoescuela.report_autoescuela_autoescuela"
        file="autoescuela.report_autoescuela_autoescuela"
    />
    <report
        id="report_autoescuela_autoescuela_pdf"
        model="autoescuela.autoescuela"
        string="Ficha de Autoescuela"
        report_type="qweb-pdf"
        name="autoescuela.report_autoescuela_autoescuela"
        file="autoescuela.report_autoescuela_autoescuela"
    />
    <template id="report_autoescuela_autoescuela">
      <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
          <div class="page">
            <h2>Información de la autoescuela</h2>
            <table class="table table-sm">
              <tbody>
                <tr>
                  <th>Nombre:</th>
                  <td><span t-field="o.name"/></td>
                </tr>
                <tr>
                  <th>Domicilio:</th>
                  <td><span t-field="o.domicilio"/></td>
                </tr>
                <tr>
                  <th>Localidad:</th>
                  <td><span t-field="o.localidad"/></td>
                </tr>
                <tr>
                  <th>Provincia:</th>
                  <td><span t-field="o.provincia"/></td>
                </tr>
                <tr>
                  <th>Contacto:</th>
                  <td><span t-field="o.contacto"/></td>
                </tr>
              </tbody>
            </table>
            <h3>Profesores</h3>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>DNI</th>
                  <th>Matrícula</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.profesor_ids" t-as="prof">
                  <td><span t-field="prof.name"/></td>
                  <td><span t-field="prof.dni"/></td>
                  <td><span t-field="prof.matricula"/></td>
                </tr>
              </tbody>
            </table>
            <h3>Alumnos</h3>
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>DNI</th>
                  <th>N.º Matrícula</th>
                </tr>
              </thead>
              <tbody>
                <tr t-foreach="o.alumno_ids" t-as="alu">
                  <td><span t-field="alu.name"/></td>
                  <td><span t-field="alu.dni"/></td>
                  <td><span t-field="alu.matricula"/></td>
                </tr>
              </tbody>
            </table>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
