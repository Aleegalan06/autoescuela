<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ========================================================= -->
    <!-- ACCIONES -->
    <!-- ========================================================= -->

    <record id="action_autoescuela" model="ir.actions.act_window">
        <field name="name">Autoescuelas</field>
        <field name="res_model">autoescuela.autoescuela</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_profesor" model="ir.actions.act_window">
        <field name="name">Profesores</field>
        <field name="res_model">autoescuela.profesor</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_alumno" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">autoescuela.alumno</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_examen" model="ir.actions.act_window">
        <field name="name">Exámenes</field>
        <field name="res_model">autoescuela.examen</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <!-- ========================================================= -->
    <!-- MENÚ RAÍZ -->
    <!-- ========================================================= -->

    <menuitem
        id="menu_autoescuela_root"
        name="Autoescuela"
        web_icon="autoescuela,static/description/icon.png"
        sequence="10"
    />
    <!-- groups="autoescuela.group_autoescuela_gestor,autoescuela.group_autoescuela_director" -->

    <!-- ========================================================= -->
    <!-- SUBMENÚS -->
    <!-- ========================================================= -->

    <menuitem
        id="menu_autoescuela"
        name="Autoescuelas"
        parent="menu_autoescuela_root"
        action="action_autoescuela"
        sequence="10"
    />

    <menuitem
        id="menu_profesor"
        name="Profesores"
        parent="menu_autoescuela_root"
        action="action_profesor"
        sequence="20"
    />

    <menuitem
        id="menu_alumno"
        name="Alumnos"
        parent="menu_autoescuela_root"
        action="action_alumno"
        sequence="30"
    />

    <menuitem
        id="menu_examen"
        name="Exámenes"
        parent="menu_autoescuela_root"
        action="action_examen"
        sequence="40"
    />

</odoo>