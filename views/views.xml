<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="autoescuela.list">
      <field name="name">autoescuela list</field>
      <field name="model">autoescuela.autoescuela</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <!--<field name="value"/>
          <field name="value2"/>-->
        </tree>
      </field>
    </record>
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="autoescuela.action_window">
      <field name="name">autoescuela window</field>
      <field name="res_model">autoescuela.autoescuela</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- server action to the one above -->
    <record model="ir.actions.server" id="autoescuela.action_server">
      <field name="name">autoescuela server</field>
      <field name="model_id" ref="model_autoescuela_autoescuela"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
  </data>
</odoo>
